<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/menu.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/home.css">

    <title>Menu</title>
  </head>

<body>
  <% include partials/_header %>
  <main role="main">
    <!-- FOOD CATEGORY -->
    <br>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="navbar-collapse justify-content-center">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="?category=fish">FISH</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="?category=crustacean">CRUSTACEANS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="?category=shellfish">SHELLFISH</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="?category=beverages">BEVERAGES</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <% foodsList.forEach(food => console.log(food.category))%>
        <% foodsList.filter(food => food.category === category).forEach((food => { %>
          <div class="col-md-3 food">
            <img src="<%= food.img_src%>" class="img-thumbnail">
            <h5 class="text-center"><%= food.name %></h5>
            <p class="text-center">$<%= food.price %></p>
            <p class="text-center"><%= category %></p>
            <div class="wrapper text-center">
              <div class="quantity">
                <button class="decrement" data-foodid="<%= food.id %>">-</button>
                <div class="count">0</div>
                <button class="increment" data-foodid="<%= food.id %>">+</button>
              </div>
            </div>
          </div>
        <% })) %>
      </div>
    <hr>
    </div>
    </div> <!-- /container -->

  </main>
  <% include partials/_footer %>

  <script src="https://code.jquery.com/jquery-3.4.0.js" integrity="sha256-DYZMCC8HTC+QDr5QNaIcfR7VSPtcISykd+6eSmBW5qo="crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/menu.js"></script>
</body>
</html>